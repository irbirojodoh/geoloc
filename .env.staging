# Staging Environment

# Cassandra
CASSANDRA_HOST=cassandra-1
CASSANDRA_KEYSPACE=geoloc

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Server
PORT=8080
GIN_MODE=release

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://staging.your-domain.com

# OAuth & Sessions
SESSION_SECRET=CHANGE-ME-staging-session-secret

# OAuth Providers (Google)
# GOOGLE_CLIENT_ID=your-staging-client-id
# GOOGLE_CLIENT_SECRET=your-staging-client-secret
# GOOGLE_CALLBACK_URL=https://staging.your-domain.com/auth/google/callback

# OAuth Providers (Apple)
# APPLE_CLIENT_ID=your-staging-client-id
# APPLE_CLIENT_SECRET=your-staging-client-secret
# APPLE_CALLBACK_URL=https://staging.your-domain.com/auth/apple/callback

# JWT Secret
JWT_SECRET=CHANGE-ME-staging-jwt-secret

# Base URL
BASE_URL=https://staging.your-domain.com
