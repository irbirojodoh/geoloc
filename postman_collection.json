{
  "info": {
    "name": "Geoloc API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "accessToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/health"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/register",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"johndoe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\",\n  \"full_name\": \"John Doe\",\n  \"phone_number\": \"+6281234567890\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/login",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"john@example.com\",\n  \"password\": \"secret123\"\n}"
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/refresh",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"YOUR_REFRESH_TOKEN_HERE\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Feed (Protected)",
      "item": [
        {
          "name": "Get Nearby Feed",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/feed?latitude=-6.3694&longitude=106.8246&radius_km=5&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "feed"],
              "query": [
                {"key": "latitude", "value": "-6.3694"},
                {"key": "longitude", "value": "106.8246"},
                {"key": "radius_km", "value": "5"},
                {"key": "limit", "value": "20"}
              ]
            },
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Get Feed (Next Page)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/feed?latitude=-6.3694&longitude=106.8246&limit=20&cursor=YOUR_CURSOR_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "feed"],
              "query": [
                {"key": "latitude", "value": "-6.3694"},
                {"key": "longitude", "value": "106.8246"},
                {"key": "limit", "value": "20"},
                {"key": "cursor", "value": "YOUR_CURSOR_HERE"}
              ]
            },
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        }
      ]
    },
    {
      "name": "Geocode (Protected)",
      "item": [
        {
          "name": "Get Address from Coordinates",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/geocode/address?lat=-6.3694&lng=106.8246",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "geocode", "address"],
              "query": [
                {"key": "lat", "value": "-6.3694"},
                {"key": "lng", "value": "106.8246"}
              ]
            },
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        }
      ]
    },
    {
      "name": "Users (Protected)",
      "item": [
        {
          "name": "Get Current User (Me)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/users/me",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/v1/users/me",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"John Smith\",\n  \"bio\": \"Updated bio\"\n}"
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/users/USER_UUID_HERE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Get User by Username",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/users/username/johndoe",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Get User's Posts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/USER_UUID_HERE/posts?limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "USER_UUID_HERE", "posts"],
              "query": [
                {"key": "limit", "value": "20"}
              ]
            },
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Follow User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/users/USER_UUID_HERE/follow",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Unfollow User",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/v1/users/USER_UUID_HERE/follow",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Get Followers",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/users/USER_UUID_HERE/followers",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Get Following",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/users/USER_UUID_HERE/following",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        }
      ]
    },
    {
      "name": "Posts (Protected)",
      "item": [
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/posts",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Hello from Depok!\",\n  \"media_urls\": [\"https://example.com/photo1.jpg\"],\n  \"latitude\": -6.3694,\n  \"longitude\": 106.8246\n}"
            }
          }
        },
        {
          "name": "Get Post by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/posts/POST_UUID_HERE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Like Post",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/posts/POST_UUID_HERE/like",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Unlike Post",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/v1/posts/POST_UUID_HERE/like",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        }
      ]
    },
    {
      "name": "Comments (Protected)",
      "item": [
        {
          "name": "Create Comment on Post",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/posts/POST_UUID_HERE/comments",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"This is a great post!\"\n}"
            }
          }
        },
        {
          "name": "Get Comments for Post",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/posts/POST_UUID_HERE/comments",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Reply to Comment",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/comments/COMMENT_UUID_HERE/reply",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Thanks for your comment!\"\n}"
            }
          }
        },
        {
          "name": "Like Comment",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/comments/COMMENT_UUID_HERE/like",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Unlike Comment",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/v1/comments/COMMENT_UUID_HERE/like",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Delete Comment",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/v1/comments/COMMENT_UUID_HERE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        }
      ]
    },
    {
      "name": "Search (Protected)",
      "item": [
        {
          "name": "Search Users",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/search/users?q=john&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "search", "users"],
              "query": [
                {"key": "q", "value": "john"},
                {"key": "limit", "value": "20"}
              ]
            },
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Search Posts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/search/posts?q=hello&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "search", "posts"],
              "query": [
                {"key": "q", "value": "hello"},
                {"key": "limit", "value": "20"}
              ]
            },
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        }
      ]
    },
    {
      "name": "Notifications (Protected)",
      "item": [
        {
          "name": "Get Notifications",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/notifications",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Mark Notification as Read",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/v1/notifications/NOTIFICATION_UUID_HERE/read",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Mark All Notifications as Read",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/v1/notifications/read-all",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        }
      ]
    },
    {
      "name": "Uploads (Protected)",
      "item": [
        {
          "name": "Upload Avatar",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/upload/avatar",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "file", "type": "file", "src": ""}
              ]
            }
          }
        },
        {
          "name": "Upload Post Media",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/upload/post",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {"key": "file", "type": "file", "src": ""}
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Location Follow (Protected)",
      "item": [
        {
          "name": "Follow Location",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/locations/follow",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"geohash\": \"qqggy\"\n}"
            }
          }
        },
        {
          "name": "Unfollow Location",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/v1/locations/qqggy/follow",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        },
        {
          "name": "Get Followed Locations",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/locations/following",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ]
          }
        }
      ]
    }
  ]
}
